{
  "manifest_version": 3,
  "name": "ASB Auto Subs",
  "description": "An extension to automatically download the subtitle file of the currently played anime intended to be used with ASB Player to add the downloaded subtitles to the video.",
  "version": "0.0.8",
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*/"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "imgs/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "css/index.css"
      ],
      "matches": [
        "https://hianime.to/*",
        "https://www.miruro.tv/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "asbautosubs@godpepe7.com",
      "strict_min_version": "109.0"
    },
    "gecko_android ": {
      "id": "asbautosubs@godpepe7.com",
      "strict_min_version": "109.0"
    }
  }
}